package test;
class grade{
	String n;
	int k,e,m,t;
	double a;
	char g;
	
	
	void tot() {
		n = "홍길동";
		k = 73;
		e = 62;
		m = 85;
		t = k + e + m;
		a = t/3;
		t = k+e+m;
		a = t/3;
		if(a>=90) g = 'A';
		else if (a>=80) g = 'B';
		else if (a>=70) g = 'C';
		else if (a>=60) g = 'D';
		else g = 'F';
		String avg = String.format("%.2f", a);
		System.out.println("이름"+"\t"+"국어"+"\t"+"영어"+"\t"+"수학"+"\t"+"총점"+"\t"+"평균"+"\t"+"학점");
		System.out.println("===================================================");
		System.out.println(n+"\t"+k+"\t"+e+"\t"+m+"\t"+t+"\t"+avg+"\t"+g);
	}
}
